{
  "type"  : "APL",
  "version" : "1.0",
  "import" :
  [
    {
      "name": "alexa-viewport-profiles",
      "version": "1.0.0"
    },
    {
      "name": "alexa-layouts",
      "version": "1.0.0"
    },
    {
      "name": "alexa-styles",
      "version" : "1.0.0"
    }
  ],
  "resources" :
  [
    {
      "colors" :
      {
        "headerColor" : "#FFFFFF",
        "headerBgColor" : "#8BEDFF"
      }
    },
    {
      "dimensions" :
      {
        "headFontSizeRoundSmall" : "35px",
        "headFontSizeMedium" : "40px",
        "headFontSizeLarge" : "45px",
        "headFontSizeExLarge" : "60px"
      }
    }
  ],
  "styles": {
    "headerStyleRoundSmall": {
      "values": [
        {
          "fontSize": "@headFontSizeRoundSmall",
          "color": "@headerColor",
          "textAlign": "center",
          "fontWeight": "bold",
          "paddingTop": "5vh",
          "paddingBottom" : "4vh",
          "paddingLeft" : "10vw",
          "paddingRight" : "10vw",
          "fontFamily": "@fontFamilyRomanSerif"
        }
      ]
    },
    "headerStyleMedium":
    {
      "values": [
        {
          "fontSize": "@headFontSizeMedium",
          "color": "@headerColor",
          "paddingLeft": "30px",
          "paddingRight" : "30px",
          "paddingTop": "20px",
          "paddingBottom" : "20px",
          "fontWeight": "bold",
          "textAlign" : "center",
          "backgroundColor": "@headerBgColor",
          "fontFamily": "@fontFamilyRomanSerif"
        }
      ]
    },
    "headerStyleLarge":
    {
      "values":
      [
        {
          "fontSize": "@headFontSizeLarge",
          "color": "@headerColor",
          "paddingLeft": "30px",
          "paddingRight" : "30px",
          "paddingTop": "33px",
          "paddingBottom" : "20px",
          "fontWeight": "bold",
          "textAlign" : "center",
          "backgroundColor": "@headerBgColor",
          "fontFamily": "@fontFamilyRomanSerif"
        }
      ]
    },
    "headerStyleExLarge":
    {
      "values":
      [
        {
          "fontSize": "@headFontSizeExLarge",
          "color": "@headerColor",
          "paddingLeft": "30px",
          "paddingRight" : "30px",
          "paddingTop": "43px",
          "paddingBottom" : "20px",
          "fontWeight": "bold",
          "textAlign" : "center",
          "backgroundColor": "@headerBgColor",
          "fontFamily": "@fontFamilyRomanSerif"
        }
      ]
    },
    "messageStyleRound" :
    {
      "values" :
      [
        {
          "fontSize" : "55px",
          "color": "@headerColor",
          "width" : "100%",
          "height" : "90%",
          "fontWeight" : 300,
          "textAlign" : "center",
          "paddingLeft" : "6vw",
          "paddingRight" : "5vw",
          "paddingTop" : "3vh",
          "paddingBottom" : "43vh"
        }
      ]
    },
    "messageStyleLarge" :
    {
      "values" :
      [
        {
          "fontSize": "55px",
          "color": "@headerColor",
          "paddingLeft": "30px",
          "paddingRight" : "30px",
          "paddingTop": "10px",
          "paddingBottom" : "20vh",
          "fontWeight": 300
        }
      ]
    }
  },
  "layouts" :
  {
    "header" :
    {
      "parameters" :
      [
        {
          "name" : "title",
          "type" : "string"
        }
      ],
      "items": [
        {
          "when": "${@viewportProfile == @hubRoundSmall}",
          "type": "Container",
          "direction": "column",
          "alignItems": "center",
          "width": "100vw",
          "height": "25vh",
          "items": [
            {
              "type": "Frame",
              "height": "100vh",
              "width": "100vw",
              "backgroundColor": "@headerBgColor",
              "items": [
                {
                  "type": "Text",
                  "text": "${title}",
                  "style": "headerStyleRoundSmall"
                }
              ]
            }
          ]
        },
        {
          "when": "${@viewportProfile == @hubLandscapeMedium}",
          "type": "Container",
          "direction": "column",
          "alignItems": "center",
          "width": "100vw",
          "height": "15vh",
          "items": [
            {
              "type": "Frame",
              "height": "100vh",
              "width": "100vw",
              "backgroundColor": "@headerBgColor",
              "items": [
                {
                  "type": "Text",
                  "text": "${title}",
                  "style": "headerStyleMedium"
                }
              ]
            }
          ]
        },
        {
          "when": "${@viewportProfile == @hubLandscapeLarge}",
          "type": "Container",
          "direction": "column",
          "alignItems": "center",
          "width": "100vw",
          "height": "15vh",
          "items": [
            {
              "type": "Frame",
              "height": "100vh",
              "width": "100vw",
              "backgroundColor": "@headerBgColor",
              "items": [
                {
                  "type": "Text",
                  "text": "${title}",
                  "style": "headerStyleLarge"
                }
              ]
            }
          ]
        },
        {
          "type": "Container",
          "direction": "column",
          "alignItems": "center",
          "width": "100vw",
          "height": "15vh",
          "items": [
            {
              "type": "Frame",
              "height": "100vh",
              "width": "100vw",
              "backgroundColor": "@headerBgColor",
              "items": [
                {
                  "type": "Text",
                  "text": "${title}",
                  "style": "headerStyleExLarge"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "mainTemplate" :
  {
    "parameters" :
    [
      "payload"
    ],
    "item" :
    [
      {
        "when" : "${@viewportProfile == @hubRoundSmall}",
        "type" : "Container",
        "direction" : "column",
        "width" : "100%",
        "height" : "100%",
        "items" :
        [
          {
            "type": "Image",
            "source": "https://s3.amazonaws.com/solverpro/alexa5.jpg",
            "position": "absolute",
            "width": "100%",
            "height" : "100%",
            "scale": "best-fill"
          },
          {
            "type" : "header",
            "title" : "${payload.simpleWithHeaderTemplateData.properties.roundTitle}"
          },
          {
            "type" : "ScrollView",
            "width" : "100vw",
            "height" : "100vh",
            "item" :
            [
              {
                "type" : "Text",
                "text" : "${payload.simpleWithHeaderTemplateData.properties.message}",
                "style" : "messageStyleRound"
              }
            ]
          }
        ]
      },
      {
        "type": "Container",
        "direction": "column",
        "width": "100vw",
        "height": "100vh",
        "items": [
          {
            "type": "Image",
            "source": "https://s3.amazonaws.com/solverpro/alexa5.jpg",
            "position": "absolute",
            "width": "100vw",
            "height": "100vh",
            "scale": "best-fill"
          },
          {
            "type" : "header",
            "title" : "${payload.simpleWithHeaderTemplateData.properties.title}"
          },
          {
            "type": "ScrollView",
            "width": "100vw",
            "height": "100vh",
            "items": [
              {
                "type": "Text",
                "text" : "${payload.simpleWithHeaderTemplateData.properties.message}",
                "style" : "messageStyleLarge"
              }
            ]
          }
        ]
      }
    ]
  }
}