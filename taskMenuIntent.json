{
  "type"  : "APL",
  "version" : "1.0",
  "import" :
  [
    {
      "name": "alexa-viewport-profiles",
      "version": "1.0.0"
    },
    {
      "name": "alexa-layouts",
      "version": "1.0.0"
    }
  ],
  "resources" :
  [
    {
      "colors" :
      {
        "taskMenuHeaderColor" : "#FFFFFF",
        "taskMenuHeaderBgColor" : "#8BEDFF"
      }
    },
    {
      "dimensions" :
      {
        "headFontSize" : "50px"
      }
    }
  ],
  "styles": {
    "taskMenuStyle": {
      "values": [
        {
          "fontSize": "@headFontSize",
          "color": "@taskMenuHeaderColor",
          "textAlign": "center",
          "fontWeight": 300
        }
      ]
    },
    "taskMenuStyleLarge": {
      "extends": "taskMenuStyle",
      "values": [
        {
          "fontSize": "@headFontSize",
          "color": "@taskMenuHeaderColor",
          "paddingLeft": "30px",
          "paddingTop": "30px",
          "fontWeight": 100,
          "textAlign" : "center",
          "backgroundColor": "@taskMenuHeaderBgColor"
        }
      ]
    }
  },
  "layouts" :
  {
    "TaskMenuHeader" :
    {
      "parameters" :
      [
        {
          "name" : "title",
          "type" : "string"
        }
      ],
      "items": [
        {
          "when": "${@viewportProfile == @hubRoundSmall}",
          "type": "Container",
          "direction": "column",
          "alignItems": "center",
          "width": "100vw",
          "height": "20vh",
          "items": [
            {
              "type": "Frame",
              "height": "95vh",
              "width": "100vw",
              "backgroundColor": "@taskMenuHeaderBgColor",
              "items": [
                {
                  "type": "Text",
                  "text": "${title}",
                  "style": "taskMenuStyle",
                  "paddingTop": "5vh"
                }
              ]
            }
          ]
        },
        {
          "type": "Text",
          "text": "${title}",
          "style": "taskMenuStyleLarge"
        }
      ]
    }
  },
  "mainTemplate" :
  {
    "parameters" :
    [
      "payload"
    ],
    "item" :
    [
      {
        "when" : "${@viewportProfile == @hubRoundSmall}",
        "type" : "Container",
        "direction" : "column",
        "width" : "100%",
        "height" : "100%",
        "items" :
        [
          {
            "type": "Image",
            "source": "https://s3.amazonaws.com/solverpro/alexa5.jpg",
            "position": "absolute",
            "width": "100%",
            "height" : "100%",
            "scale": "best-fill"
          },
          {
            "type" : "TaskMenuHeader",
            "title" : "Task Menu"
          },
          {
            "type" : "Text",
            "text" : "This is the task menu : <br>",
            "fontSize" : "38px",
            "color" : "#ffffff",
            "width" : "100%",
            "paddingTop" : "3vh",
            "paddingLeft" : "10vw",
            "paddingRight" : "10vh"
          },
          {
            "type" : "ScrollView",
            "width" : "100vw",
            "height" : "100vh",
            "item" :
            [
              {
                "type" : "Text",
                "id" : "taskMenuComponent",
                "text" : "${payload.taskMenuIntentTemplateData.properties.taskMenuMessage}",
                "fontSize" : "55px",
                "color" : "#ffffff",
                "width" : "100%",
                "height" : "90%",
                "fontWeight" : 300,
                "textAlign" : "center",
                "paddingLeft" : "5vw",
                "paddingRight" : "5vw",
                "paddingBottom" : "40vh"
              }
            ]
          }
        ]
      },
      {
        "type": "Container",
        "direction": "column",
        "width": "100vw",
        "height": "100vh",
        "items": [
          {
            "type": "Image",
            "source": "https://s3.amazonaws.com/solverpro/alexa5.jpg",
            "position": "absolute",
            "width": "100vw",
            "height": "100vh",
            "scale": "best-fill"
          },
          {
            "type" : "TaskMenuHeader",
            "title" : "Task Menu"
          },
          {
            "type" : "Text",
            "text" : "This is the task menu: <br>",
            "fontSize" : "45px",
            "color" : "#ffffff",
            "width" : "100%",
            "paddingTop" : "3vh",
            "paddingLeft" : "5vw"
          },
          {
            "type": "ScrollView",
            "width": "100vw",
            "height": "60vh",
            "items": [
              {
                "type": "Text",
                "id": "taskMenuSpeechText",
                "text": "${payload.taskMenuIntentTemplateData.properties.taskMenuMessage}",
                "fontSize": "55px",
                "color": "#ffffff",
                "paddingLeft": "30px",
                "paddingRight" : "30px",
                "paddingTop": "10px",
                "paddingBottom" : "5vh",
                "fontWeight": 300
              }
            ]
          },
          {
            "type": "AlexaFooter",
            "footerHint": "${payload.taskMenuIntentTemplateData.properties.hintString}"
          }
        ]
      }
    ]
  }
}